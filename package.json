{
  "name": "meta-policy-scanner",
  "version": "1.0.0",
  "description": "Scan codebases for Meta API policy violations",
  "main": "dist/index.js",
  "bin": {
    "meta-scan": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server/index.js",
    "server": "node dist/server/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "cli": "node dist/bin/cli.js"
  },
  "keywords": [
    "meta",
    "facebook",
    "instagram",
    "messenger",
    "whatsapp",
    "api",
    "policy",
    "scanner",
    "linter",
    "compliance",
    "graph-api",
    "marketing-api"
  ],
  "author": "Erriccc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Erriccc/meta-policy-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/Erriccc/meta-policy-scanner/issues"
  },
  "homepage": "https://github.com/Erriccc/meta-policy-scanner#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "commander": "^12.0.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "openai": "^4.24.0",
    "@mendable/firecrawl-js": "^0.0.19",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "table": "^6.8.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "QUICK_START.md",
    "example-rule-templates.json",
    "meta-scan.config.example.json"
  ]
}
